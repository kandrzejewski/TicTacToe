@model TicTacToe.Models.ValidateTwoFactorModel
@{
    ViewData["Title"] = "Weryfikacja dwuskładnikowa";
}

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>Weryfikacja kodu zabezpieczającego</h3>
            </div>
            <div class="card-body">
                <form asp-action="ValidateTwoFactor" asp-controller="Account" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><ion-icon name="mail-sharp"></ion-icon></span>
                        </div>
                        <input class="form-control" asp-for="UserName" type="email" placeholder="adres e-mail">
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><ion-icon name="lock-closed-sharp"></ion-icon></span>
                        </div>
                        <input class="form-control" asp-for="Code" placeholder="Wprowadź kod">
                    </div>
                    <div class="form-group">
                        <input name="submit" type="submit" value="Zweryfikuj kod" class="btn verify_btn">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

