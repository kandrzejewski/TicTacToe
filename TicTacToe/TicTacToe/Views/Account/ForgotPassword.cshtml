@model TicTacToe.Models.ResetPasswordModel
@{
    ViewData["Title"] = "Resetowanie hasła";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card card-smaller">
            <div class="card-header">
                <h3>Nie pamiętasz hasła?</h3>
                <p>Tutaj możesz je zresetować.</p>
            </div>
            <div class="card-body">
                <form role="form" autocomplete="off" method="post" asp-action="SendResetPassword" asp-controller="Account">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><ion-icon name="mail-sharp"></ion-icon></span>
                        </div>
                        <input name="UserName" type="email" class="form-control" placeholder="adres e-mail">
                    </div>
                    <div class="d-flex justify-content-center links">
                        <input name="recover-submit" type="submit" value="Zresetuj hasło" class="btn verify_btn">
                        <input type="hidden" class="hide" name="token" value="" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

