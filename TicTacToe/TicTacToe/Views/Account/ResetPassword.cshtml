@model TicTacToe.Models.ResetPasswordModel
@{
    ViewData["Title"] = "Resetowanie hasła";
}

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>Zresetuj swoje hasło</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-action="ResetPassword" asp-controller="Account">
                    <input type="hidden" asp-for="Token" />
                    <div asp-validation-summary="All"></div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><ion-icon name="mail-sharp"></ion-icon></span>
                        </div>
                        <input type="email" class="form-control" asp-for="UserName" placeholder="adres e-mail">
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><ion-icon name="key-sharp"></ion-icon></span>
                        </div>
                        <input type="password" class="form-control" asp-for="Password" placeholder="hasło">
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><ion-icon name="key-sharp"></ion-icon></span>
                        </div>
                        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="potwierdź hasło">
                    </div>
                    <div class="form-group">
                        <input name="submit" type="submit" value="Zresetuj hasło" class="btn verify_btn">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

